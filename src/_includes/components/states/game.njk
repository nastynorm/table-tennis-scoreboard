{% import "macros/player_score.njk" as player_score %}

<div class="max-w-4xl mx-auto px-4 mt-8 h-screen text-white" x-data x-show="$store.state === 'game' | $store.state === 'correction'">
  <main class="grid grid-cols-2">
    {{ player_score.score('player1') }}
    {{ player_score.score('player2') }}
  </main>
  <div id="correction" class="absolute bottom-0 left-0 ml-4 mb-4">
    <button class="font-mono uppercase border px-4 py-2 bg-white text-black border-t-1 border-l-1 border-b-4 border-r-4  border-black font-bold active:border-b-0 active:border-r-0 active:border-t-4 active:border-l-4 selectable"
            x-data
            @click="$store.state = 'correction'"
            title="Correct a scoring mistake"
            x-show="$store.state === 'game'"
    >
      Correction
    </button>
    <button class="font-mono uppercase border px-4 py-2 bg-white text-black border-t-1 border-l-1 border-b-4 border-r-4  border-black font-bold active:border-b-0 active:border-r-0 active:border-t-4 active:border-l-4 selectable"
            x-data
            @click="$store.state = 'game'"
            title="Correct a scoring mistake"
            x-show="$store.state === 'correction'"
    >
      Correction Complete
    </button>
  </div>
  <div id="config" class="absolute bottom-0 right-0 mr-4 mb-4">
    <button class="font-mono uppercase border px-4 py-2 bg-white text-black border-t-1 border-l-1 border-b-4 border-r-4  border-black font-bold active:border-b-0 active:border-r-0 active:border-t-4 active:border-l-4 selectable"
            x-data
            @click="$store.state = 'setup'"
            title="Configure Match Settings"
    >
      Setup
    </button>
  </div>
</div>
